    // ãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿è¨­å®š
    let seq_len = 4
    let d_model = 8
    let d_ff = 16
    
    print("è¨­å®š:")
    print("  seq_len:", seq_len)
    print("  d_model:", d_model)
    print("  d_ff:", d_ff)
    print("")
    
    // å…¥åŠ›ä½œæˆ
    print("Step 1: å…¥åŠ›ä½œæˆ")
    let x = positional_encoding(seq_len, d_model)
    print("  å…¥åŠ›å½¢çŠ¶:", shape(x))
